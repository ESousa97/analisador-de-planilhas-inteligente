# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text diff=python
*.pyx text diff=python
*.pxd text diff=python
*.pxi text diff=python

# Notebooks
*.ipynb text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Configs
*.json text
*.yaml text
*.yml text
*.toml text
*.ini text
*.cfg text
*.conf text

# Documentation
*.md text diff=markdown
*.txt text
*.rst text

# Web
*.html text diff=html
*.css text diff=css
*.js text
*.ts text

# Data (treat as binary to prevent conversion issues)
*.csv binary
*.xlsx binary
*.xls binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Fonts
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary
*.otf binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Executables
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Python specific
*.pyc binary
*.pyo binary
*.pyd binary
*.egg binary
*.whl binary
